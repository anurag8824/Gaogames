<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Aviator Game</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #062b4c;
      color: white;
    }
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px;
      background-color: #333;
    }
    .header img {
      height: 30px;
    }
    .deposit-btn {
      background-color: #f9b400;
      padding: 8px 16px;
      border-radius: 8px;
      color: black;
      font-weight: bold;
      text-decoration: none;
    }
    .menu-icon {
      font-size: 24px;
      cursor: pointer;
    }
    .support-btn {
      background: linear-gradient(to right, yellow, orange);
      color: black;
      padding: 10px;
      font-weight: bold;
      text-align: center;
    }
    .promo-image {
      width: 100%;
      height: auto;
    }
    .play-now-btn {
      display: block;
      margin: 20px auto;
      background-color: orange;
      color: white;
      padding: 10px 30px;
      border: none;
      border-radius: 8px;
      font-weight: bold;
    }
    .withdrawal-box {
      background-color: white;
      color: black;
      margin: 0 20px;
      padding: 15px;
      border-radius: 12px;
      text-align: center;
      font-weight: bold;
    }
    .withdrawal-box span {
      color: green;
      font-size: 20px;
    }
    .footer {
      /* text-align: center; */
      padding: 20px;
      margin-top: 20px;
      /* background-color: #1c1c1c; */
    }
    .footer img {
      width: 100%;

    }

    .sidebar {
      position: fixed;
      top: 0;
      right: -300px;
      /* width: 280px; */
      height: 100%;
      background-color: #1f2937;
      color: white;
      transition: right 0.3s ease-in-out;
      padding: 20px;
      z-index: 1000;
      box-shadow: -2px 0 10px rgba(0,0,0,0.3);
    }

    .sidebar.open {
      right: 0;
    }

    .sidebar-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .sidebar-header img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
    }

    .menu-item {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 10px;
      margin-bottom: 10px;
      border-radius: 6px;
      cursor: pointer;
      text-decoration: none;
      color: white;
    }

    .menu-item:hover {
      background-color: #374151;
    }

    .close-btn {
      cursor: pointer;
      font-size: 24px;
    }
  </style>
</head>
<body>

  <div class="header">
    <img src="/images/banners/logo.png" alt="Aviator Logo">
    <% if (money === false) { %>
      <a href="/login" class="deposit-btn">LOGIN / REGISTER</a>
    <% } else { %>
      <div class="deposit-btn" onclick="window.location.href='/wallet/recharge'">‚Çπ<%= money %> DEPOSIT</div>
    <% } %>
    <div class="menu-icon" id="menuToggle">&#9776;</div>
  </div>

  <div class="support-btn" onclick=`${<%= telegram %>}`>CUSTOMER SUPPORT</div>
  <img src="/images/banners/title.jpg" alt="Promo Image" class="promo-image">

  <% if (money == false) { %>
    <button class="play-now-btn" onclick="window.location.href='/login'">Login</button>

    <% } else { %>
        <button class="play-now-btn" onclick="window.location.href='/aviator'">PLAY NOW</button>

    <% } %>

  <div class="withdrawal-box">
    <div id="name">Disha</div>
    <div>Approved Withdrawal:</div>
    <span id="withdrawal">‚Çπ113645</span>
  </div>

  <div class="footer">
    <img src="/images/banners/fff.jpeg" alt="Aviator Logo Footer" >
  </div>

  

  <!-- Sidebar -->
  <div id="sidebar" class="sidebar">
    <% if (money !== false) { %>
      <div class="sidebar-header">
        <div style="display: flex; align-items: center; gap: 10px;">
          <img src="/images/avatar.svg" alt="User">
          <div>
            <div><%= username %></div>
            <div style="font-size: 14px; color: #9CA3AF;">‚Çπ<%= money %></div>
          </div>
        </div>
        <div class="close-btn" id="closeSidebar">&times;</div>
      </div>

      <a href='/wallet/recharge' class="menu-item">üí∞ DEPOSIT FUNDS</a>
      <a href='/wallet/withdrawal' class="menu-item">üíµ WITHDRAW</a>
      <a href="/myProfile" class="menu-item">üë§ PERSONAL DETAILS</a>
      <a href='/wallet/rechargerecord' class="menu-item">üìÑ TRANSACTION HISTORY</a>
      <a href="/levels" class="menu-item">üìà LEVEL MANAGEMENT</a>
      <a href="/referral" class="menu-item">üéÅ REFERRAL</a>
      <a href="/login" class="menu-item">üö™ SIGN OUT</a>
      <% if (ekyc === false) { %>
        <a href="/ekyc" class="menu-item">üí∞ E-KYC</a>
      <% } %>    <% } else { %>
      <div class="sidebar-header">
        <p>Please <a href="/login" style="color: yellow;">Login</a> to view menu</p>
        <!-- <div class="close-btn" id="closeSidebar">&times;</div> -->
      </div>
    <% } %>
  </div>

  <script>
    const menuToggle = document.getElementById('menuToggle');
    const sidebar = document.getElementById('sidebar');
    const closeSidebar = document.getElementById('closeSidebar');

    menuToggle.addEventListener('click', () => {
      sidebar.classList.add('open');
    });

    closeSidebar.addEventListener('click', () => {
      sidebar.classList.remove('open');
    });

    const dummyData = [
      { name: 'Disha', amount: '113645' },
      { name: 'Rahul', amount: '98650' },
      { name: 'Sneha', amount: '124300' },
      { name: 'Amit', amount: '75300' },
      { name: 'Pooja', amount: '145600' },
      { name: 'Vikram', amount: '84500' }
    ];

    let index = 0;
    setInterval(() => {
      const data = dummyData[index];
      document.getElementById('name').innerText = data.name;
      document.getElementById('withdrawal').innerText = '‚Çπ' + data.amount;
      index = (index + 1) % dummyData.length;
    }, 1000);
  </script>

</body>
</html>
